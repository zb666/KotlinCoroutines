<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tvOne"
            android:text="111"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv222"
            android:text="tv222"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv333"
            android:text="333"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/la_entry"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/entry" />
<!--energy_bar_effect2-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/la_entry_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:lottie_autoPlay="true"
        app:lottie_imageAssetsFolder="img_0"
        app:lottie_rawRes="@raw/entry" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lt_mail"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lt_slide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/energy_bar_effect2" />
<!--@raw/energy_bar_effect2-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        app:lottie_fileName="energy_entry.json"
        app:lottie_imageAssetsFolder="images/energy_entry"
        app:lottie_loop="true" />

</LinearLayout>